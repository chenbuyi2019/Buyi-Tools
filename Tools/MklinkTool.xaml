<local:ToolPageBase x:Class="BuyiTools.Tools.MklinkTool" x:Name="page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BuyiTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MklinkTool">

    <Grid Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label>母体文件夹：</Label>
        <TextBox x:Name="TxtParentFolder" Grid.Column="1" MaxLength="520"
                 Margin="5,5,5,5"></TextBox>
        <TextBlock Grid.Row="1">目标文件夹<LineBreak></LineBreak>一行一个：</TextBlock>
        <TextBox x:Name="TxtTargetFolders" Grid.Row="1" Grid.Column="1" 
                 Margin="5,5,5,5"
                 AcceptsReturn="True" Height="200"></TextBox>
     
    </Grid>
</local:ToolPageBase>
